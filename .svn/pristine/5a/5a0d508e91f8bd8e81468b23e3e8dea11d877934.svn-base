@charset "UTF-8";
.speech-bubble {
  position: absolute;
  top: 134px;
  right: 10px;
  background-color: #edecec;
  width: 200px;
  line-height: 150px; /* 垂直居中 */
  color: transparent;
  border-radius: 6px;
  font-family: sans-serif;

}
 
.speech-bubble:after {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  right: 0px;
  border: 12px solid;
}
 
/* 箭头的位置 */
.speech-bubble-top:after {
  border-bottom-color: #edecec;
  left: 50%;
  bottom: 100%;
  margin-left: 50px;  
}
.masking{
		position:absolute;
        left:0;
        top:0;
        width:100%;
        height:100%;
        background:transparent;
}
.speech-bubble a{ font-family: "Microsoft YaHei"; font-size: 24px; display: block; margin: 0 10px; height: 60px; line-height: 60px; border-bottom: 1px solid #ccc; }
.speech-bubble a img{ margin-right: 10px; margin-top: -6px;}
.speech-bubble a:last-child{ border: none;}


/*首页*/
.head-info{ width: 100%; height: 200px; overflow: hidden; background: url("../images/bgtop.png") no-repeat center;}
.head-info li{ width: 50%; display: block; float: left; padding: 39px 0px 40px 0px; color: #fff; box-sizing: border-box; text-align: center;}
.head-info li p{ display: block; font-size: 24px; margin-top: 20px; }
.head-info li span{ font-size:40px; height: 70px; line-height: 70px; display: block;}
.head-info li span em{ font-size: 30px;}
.head-info li  a{ color: #fff;}

.menu-info{ width: 100%; overflow: hidden; background: #fff; border-bottom: 1px solid #efeeee; margin-bottom: 20px; }
.menu-info div.menu-row{ overflow: hidden; border-top: 1px solid #efeeee; }
.menu-info div.menu-row a{ float: left; color: #000; width: 33.3%; border-right: 1px solid #efeeee; box-sizing: border-box; text-align: center; padding-top: 24px; padding-bottom: 24px; }
.menu-info div.menu-row a:nth-child(3n){ border-right: none; }
.menu-info div.menu-row a img{ height: 47px; }
.menu-info div.menu-row a p{ font-size: 30px; height: 40px; line-height: 40px;font-weight: normal;padding-top: 20px; }

.notice-info{ width: 100%; overflow: hidden; background: #fff; border-bottom: 1px solid #ccc;}
.notice-info h2{ font-size: 28px; padding-left: 20px; padding-top: 25px; }
.notice-info h2 a{ font-size: 28px; padding-right: 20px;}
.notice-info ul li{ border-bottom: 0px; padding:0px 20px; }
.notice-info ul li:first-child{ border-bottom: 1px solid #ccc;}
.notice-info ul li a{display: block; overflow: hidden;  height: 90px; line-height: 70px; font-size: 28px; color: #333; font-weight: normal; height:77px;}
.notice-info ul li i.dot{ float: left; width: 9px; height: 9px; display: inline-block; margin-right: 6px;  margin-top: 28px; background: url("../images/dian.png") no-repeat; }
.notice-info ul li i.dotwhite{ float: left; width: 9px; height: 9px; display: inline-block; margin-right: 6px;  margin-top: 44px; background: url("../images/dianwhite.png") no-repeat; }