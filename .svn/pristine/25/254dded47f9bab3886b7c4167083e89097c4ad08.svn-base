<script type="text/javascript">
$(document).ready(function(){

	$(".goMenu").on("click", function(e){
		if($(".speech-bubble").is(":hidden")){
	    		$(".speech-bubble").show();
	    		$('.masking').show();
	    	}else{
	    		$(".speech-bubble").hide();
	    		$('.masking').hide();
	    	}

	    	$(document).one("click", function(){
	        		$(".speech-bubble").hide();
	        		$('.masking').hide();
	    	});
			
		$(".masking").click(function(){
	        		$(".speech-bubble").hide();
	        		$('.masking').hide();
    		});		
	    	e.stopPropagation();
	});
	$(".speech-bubble").on("click", function(e){
	    	e.stopPropagation();
	});

});



	
</script>