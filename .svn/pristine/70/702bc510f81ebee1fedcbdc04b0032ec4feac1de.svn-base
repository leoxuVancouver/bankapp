 /*预付款明细搜索*/

.osearch .bundle{ background: #fff; width: 100%;  }


.osearch ul{ width: 100%;margin:20px 0px 20px 0px;position: relative;}
.osearch ul li{ padding: 10px 20px 10px 20px; height:80px;font-size:32px;text-align: left;line-height:80px;overflow: hidden; position: relative; color: #333333; border-bottom: 1px solid #ccc; }
.osearch ul li span{ height:80px;font-size:28px;text-align: left;line-height:80px;color: #333333;width:200px;float: left; }
.osearch ul li input{ height:80px;font-size:28px;text-align: center;line-height:80px;color: #999999;width:380px; }


.osbtn a{ margin-left:20px;display: inline-block; width: 600px; height: 78px; line-height: 78px; text-align: center; font-size: 36px; background: #2b98e5; border-radius: 5px;  color: #fff;}
left:10px;

.searchfoot a.btnPay{ float: right; color: #fff; font-size: 36px; display: inline-block; width: 196px; background: #2b98e5; text-align: center; line-height: 90px; }


.paymain{ width: 100%; }
.paytop{ padding: 10px 25px; border-bottom: 1px solid #ccc;}
.paytop p{ font-size: 28px; padding: 8px 0px;}
.balance{ padding: 20px 25px; border-bottom: 1px solid #ccc;}
.balance p{ font-size: 28px; padding: 8px 0px;}
.paylist{ border: 1px solid #ccc; border-radius: 10px; margin: 25px; overflow: hidden;}

.paylist ul li{ line-height: 80px; font-size: 28px; color: #333;  position: relative;}
.paylist ul li:not(:last-child){border-bottom: 1px solid #ccc;}
.paylist ul li a{ display: block; padding: 0px 12px;}
.paylist ul li span{ font-size: 28px; color: #ccc; float: right; margin-right: 40px;}
.paylist ul li span img{ vertical-align: middle; margin-top: -6px; margin-right: 10px;}
.paylist ul li i.arrow{ display: inline-block; background: url("../images/rarrow.png"); width: 14px; height: 26px; position: absolute; right: 24px; top: 27px;}
.paylist ul li i.arrow.arrow_down{ background: url("../images/rarrow2.png"); width: 26px; height: 14px; top: 33px;}
.menu_show li{ border-bottom: 1px solid #ccc; padding-left: 23px;}
.paylist22 ul li:after{content: ""; background: url("../images/rarrow.png"); width: 14px; height: 26px; position: absolute; right: 24px; top: 42%; }
.paylist ul li em{ padding-left: 20px; }