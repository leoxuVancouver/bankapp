/*我的供应商 - 详情*/
.providexq{ width: 100%; }
/*详情*/
.providexq .group1{ background: #fff; padding: 10px; margin:15px; border:1px solid #ccc; border-radius:10px; }
.providexq .group1 .tit{ padding: 0px 0px; font-size: 28px; height: 60px; line-height: 60px; border-bottom: 0px solid #ccc; margin-bottom:10px;}
.providexq .group1 .tit img{ vertical-align: middle; margin-right: 20px; margin-left: 20px; }
.providexq .group1 .tit a{ display: block; float: right; font-size: 24px; color: #2b98e5;  }

.providexq .group1 .con{ width: 100%;  overflow: hidden; }
.providexq .group1 .con ul{ border-bottom: 1px solid #ccc; overflow: hidden; padding: 15px 25px;}
.providexq .group1 .con ul li{ width: 50%; float: left; line-height: 32px; font-size: 24px;}
.providexq .group1 .con ul li input{ width: 50%;  font-size: 24px; color: #666; text-indent: 10px; height: 30px; border: 1px solid #ccc; }
.providexq .group1 .con ul li select{ width: 50%;  font-size: 24px; color: #666; height: 30px; border: 1px solid #ccc; }
.providexq .group1 .con ul li input{ width: 50%;  font-size: 24px; color: #666; text-indent: 10px; height: 30px; border: 1px solid #ccc; }


.providexq .group1 .con .info{ clear: both; overflow: hidden; padding: 15px 25px;}
.providexq .group1 .con .info p{ float: left; clear: both; font-size: 24px; padding: 5px 0px;}
.providexq .group1 .con .info p label{ float: left; height:50px;}
.providexq .group1 .con .info .phone{ height: 42px; line-height: 42px; overflow: hidden; width: 100%; padding: 10px 0px;}
.providexq .group1 .con .info .phone span{ float: left; display: inline-block; width: 40%; font-size: 24px;}
.providexq .group1 .con .info .phone span:nth-child(1){ text-align: left;}
.providexq .group1 .con .info .phone span:nth-child(2){ text-align: center;}
.providexq .group1 .con .info .phone span:nth-child(3){ text-align: right;}
.providexq .group1 .con .info .phone span img{ vertical-align: middle; margin-right: 10px; }
.providexq .group1 .con .desc{ font-size: 24px; padding: 0 25px; height: 80px; border-top: 0px solid #ccc; line-height: 80px;}
.providexq .group1 .con .desc b{ font-size: 28px; font-weight: normal;}
.providexq .group1  .info input{ width: 50%;  font-size: 24px; color: #666; text-indent: 10px; height: 30px; border: 1px solid #ccc; }



.providexq .group2{ background: #fff; border-top: 1px solid #ccc;  border-bottom: 1px solid #ccc; }
.providexq .group2 .con{ padding: 12px 25px; overflow: hidden;}
.providexq .group2 h4{ height: 46px; line-height: 46px; font-size: 28px;}
.providexq .group2 p{ float: left; clear: both; padding: 4px 0px;}
.providexq .group2 ul { width: 100%; overflow: hidden;}
.providexq .group2 ul li{ width: 50%; float: left; height: 36px; line-height: 36px; font-size: 24px;}


.tabshow{ display: none; }
.blog{ background: #fff; padding: 0 25px; height: 100px; line-height: 100px; font-size: 28px;border-top: 1px solid #ccc;  border-bottom: 1px solid #ccc;}
.blog a{ display: block; width: 100%; position: relative;}
.blog a:after{ content: ""; background: url("../images/rarrow.png"); width: 14px; height: 26px; position: absolute; right: 0px; top: 38%; }

.tabshow2 .group3{ border: 1px solid #ccc; border-radius:10px; margin:15px; background: #fff;  }
.tabshow2 .group3 .tite{ background: #fff;  height: 81px; line-height: 81px; border-bottom: 1px solid #ccc;  overflow: hidden;}
.tabshow2 .group3 .tite h2{ padding: 0 25px; font-size: 28px; float: left;}

.tabshow2 .group3 .cont{ padding:15px 25px; overflow: hidden; }
.tabshow2 .group3 .cont .productName{ width: 100%; font-size: 28px; clear: both;}
.tabshow2 .group3 .cont .productName label{ height: 50px; display: block; float: left;}
.tabshow2 .group3 .cont .productType{ width: 100%; font-size: 24px; clear: both; margin-top: 30px;}
.tabshow2 .group3 .cont .productType span{ display: inline-block; width: 50%; }
.tabshow2 .group3 .foot{ overflow: hidden; margin: 0 25px; border-top: 0px solid #ccc; }
.tabshow2 .group3 .foot p{ padding: 15px 0px; display: block; clear: both; }
.tabshow2 .group3 .foot p span{ font-size: 24px; display: inline-block; }
.btnbind{ height: 78px; padding: 120px 40px;}
.btnbind a{ display: inline-block; width: 250px; height: 78px; line-height: 78px; text-align: center; font-size: 30px; background: #2b98e5; border-radius: 5px;  color: #fff;}
.header a.goEditicon{position: absolute; display: block; height: 36px; width: 41px; right: 110px; top: 70px; background: url("../images/icon_edit.png") no-repeat;}
.header a.goEditok{position: absolute; display: block; height: 36px; width: 41px; right: 110px; top: 70px; background: url("../images/icon_editok.png") no-repeat;}