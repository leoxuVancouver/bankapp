/*在线下单*/
.tips{ height: 72px; line-height: 72px; background: #fff; padding: 0 24px; font-family: "Microsoft YaHei","宋体";}
.mycart{ width: 100%; }

.mycart ul{}
.mycart ul li{ background: #fff; position: relative; margin-bottom: 18px; padding: 10px 0px 20px 0px; overflow: hidden; border-top: 1px solid #2b98e5;border-bottom: 1px solid #2b98e5;}
.mycart ul li .code{ float: left; clear: both; font-size: 20px; width: 100%; padding: 14px 0px; }
.mycart ul li .code span{ padding-left: 25px; }
.mycart ul li .code a.J_del{ padding-left: 36px; padding-right: 25px; position: absolute; right: 0px; background: url("../images/icon_del.png") no-repeat;}
.mycart ul li p{ padding: 0 25px; margin-bottom: 20px;}
.shopprice{ padding: 0px 25px; color: #000;}
.mycart ul li .plus{ height: 54px; line-height: 54px; border-top: 1px solid #ccc; margin: 0 25px; padding: 20px 0px; clear: both;}
.mycart ul li .plus .purch{ width: 300px; float: right; position: relative; }
.mycart ul li .plus .purch a{ width: 42px; height: 52px; line-height: 52px; display: inline-block; background: #fff; border: 1px solid #ccc; text-align: center; position: absolute; top: 0px;}
.mycart ul li .plus .min{ left: 100px; border-radius: 5px 0px 0px 5px;}
.mycart ul li .plus .add{ left: 254px; border-radius: 0px 5px 5px 0px;}
.mycart ul li .plus em.number{ width: 110px; height: 52px; line-height: 52px; left: 144px; text-align: center; position: absolute; top: 0px; }
.mycart ul li .plus em{ float: right; }

.spname{ height: 50px; overflow: hidden;}
.spname label{ height: 50px; float: left;}
.mycart .addshop{ background: #fff; height: 100px; ; color: #666; text-align: center; line-height: 100px; }
.mycart .addshop img{ vertical-align: middle; margin-left: 20px; }
.mycart .abs{ margin-top: 580px;}

.price_info{ height: 100px; line-height: 100px; background: #fff; padding: 0px 25px; overflow: hidden;}
.mycart_info{ height: 192px; line-height: 192px; padding-left: 68px; background: #e5f4ff; border-bottom: 1px solid #ccc;}
.mycart_info img{ vertical-align: middle; margin-top: -8px; margin-right: 10px;}
.mycart_info span{font-size: 28px;}
.btninfo{ padding: 360px 25px 100px 25px; }
.btninfo p{ font-size: 24px; display: block; width: 100%; text-align: center; margin-bottom: 60px;}
.btninfo a{ display: inline-block; font-size: 30px; width: 282px; height: 78px; border-radius: 5px; background: #2b98e5; color: #fff; line-height: 78px; text-align: center;}
