.online{ position: relative; overflow: hidden;  padding: 0px 20px; margin: 20px; background: #fff; border: 1px solid #ccc; border-radius: 10px;}
.online ul{ height: 880px; overflow: auto; padding: 40px 0px;}
.online ul li{ width: 100%; position: relative; display: inline-block; padding-top: 20px; clear: both; margin-bottom: 100px;}
.online ul li.old p{ font-size: 24px;  display: block; position: absolute; top: -10px; left: 0px; width: 100%; text-align: center;}
.online ul li.old img{ position: absolute; left: 0px; top: 20px;}
.online ul li.old .massage{ font-size: 24px; position: absolute; left:0px; top: 20px; display: inline-block; border-radius: 10px; padding: 20px; margin-left: 110px; background: #eaeaea; }
.online ul li.old .massage:after { content: '';  position: absolute; top: 15px; width: 0; height: 0; 
border-top: 15px solid #eaeaea; left: -15px;  border-left: 15px solid transparent;}

.online ul li.even{ width: 100%; position: relative; display: inline-block; padding-top: 20px; clear: both; margin-bottom: 150px;}
.online ul li.even p{ font-size: 24px;  display: block; position: absolute; top: 10px; left: 0px; width: 100%; text-align: center;}
.online ul li.even img{ position: absolute; right: 0px; top: 60px;}
.online ul li.even .massage{ font-size: 24px;  position: absolute; right:0px; top: 40px;display: inline-block; border-radius: 10px; padding: 20px; margin-right: 110px; margin-top:20px;background: #d7edfc;}
.online ul li.even .massage:after { content: '';  position: absolute; top: 15px; width: 0; height: 0; 
border-top: 15px solid #d7edfc; right: -15px;  border-right: 15px solid transparent;}

.operation_area{ position: absolute; bottom: 24px;display: block; height: 52px;  }
.operation_area a{ display: inline-block; position: absolute; bottom: 9px; width: 46px; height: 46px; }
.operation_area .inp{ text-indent: 10px; font-size: 24px; width: 360px; height: 60px; border: 1px solid #ccc; position: absolute; left: 66px; bottom: 0px;}
.operation_area a.talk_icon{ left: 0px; background: url("../images/icon_horn.png");}
.operation_area a.face_icon{ left: 442px; background: url("../images/icon_face.png");}
.operation_area a.plus_icon{ left: 510px; background: url("../images/icon_add.png"); }
.operation_area a.send{ display: none;  width: 72px; font-size: 28px; border-radius: 8px; line-height: 46px; left: 500px; text-align: center; background: #2b98e5; color: #fff; }