 /*登录页面*/
.logo{ width: 100%; height: 40px; margin-top: 172px; text-align: center; }
.logo h1{ padding: 0 16px; text-align: center; }
.logo h1 img{ }
.login{ padding: 100px 32px 0px 32px; }
.login .group{ border-bottom: 1px solid #2b98e5; height: 72px; line-height: 72px; margin-bottom: 30px; }
.login .group label{ display: inline-block; font-size: 28px; }
.login .group input{ border: none; width: 70%; height: 50px; line-height: 50px; background: none; font-size: 28px; }
.login .btn-logon{ margin-top: 78px; text-align: center; }
.login .btn-logon .btnlogin{ width: 100%; height: 78px; background: #2b98e5; color:#fff; border: none; border-radius: 5px; font-size: 36px; }
.login .btn-logon a.sublogin{ color: #333; display: block; font-size: 28px; margin-top: 40px; }
.login .btn-logon a:hover{ color: #2b98e5; }
.login .logonfoot{ height: 20px; line-height: 20px; font-size: 28px; text-align: center; color: #333; margin-top: 140px;}
.login .logonfoot a{ color: #000; padding: 0 10px; font-size: 28px; }
.login .logonfoot a:hover{ color: #2b98e5; }

.login_wrong{width: 90%;background-color: #ccc;min-height: 360px;padding: 32px 32px 0px 32px;margin-top: 20px;display:none;}
.login_wrong .zhpassword,.login_wrong .zhusername{width: 100%;height: 77px;background-color: #fff;border-radius:10px;text-align: center;color:#666;line-height: 77px;font-size: 28px;cursor:pointer;}
.login_wrong .zhusername{margin-top:25px;}
.login_wrong .quxiao{width: 100%;height: 77px;background-color: #999;border-radius:10px;margin-top: 25px;text-align: center;color:#fff;line-height: 77px;font-size: 28px;cursor:pointer;}