/******员工信息编辑******/
.info dt, .info dd { float:left; height:90px;line-height:90px; border-bottom:1px solid #ccc;padding:0 10px;}
.info dt{width:180px; color:#999;}
.info dd{width:368px;}
.info dd .inps{ font-size:1em; }
.info-a {
	background: #fff;
	padding: 0 10px 10px;
	margin: 0 15px 15px;
	border: 1px solid #ccc;
	border-radius: 10px;
	float:left;
	font-size:28px;
	width:92%;
}
.info-a dt, .info-a dd { float:left;line-height:30px;padding:20px 10px;}
.info-a dt{width:180px;}
.info-a dd{font-size:0.8em; width:368px;}
.clear{ clear:both;}
